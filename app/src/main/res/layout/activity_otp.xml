<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Verification code"
        android:textColor="@color/gray_a"
        android:textSize="28sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="SMS verification code has been sent to:"
        android:textColor="@color/gray_c"
        android:textSize="20sp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="+91-9876543210"
        android:textColor="@color/colorAccent"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="PIN CODE"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <com.ibt.e_commerce.utils.pinview.Pinview
            android:id="@+id/pinview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cursorVisible="false"
            app:forceKeyboard="false"
            app:hint=""
            app:inputType="number"
            app:password="false"
            app:pinBackground="@drawable/pinview_back"
            app:pinHeight="30dp"
            app:pinLength="6"
            app:pinWidth="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnVerify"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="70dp"
        android:background="@drawable/button_bg2"
        android:text="@string/verify_proceed"
        android:textColor="@color/white" />
</LinearLayout>